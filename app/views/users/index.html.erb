<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render 'users/sidebar', user: @user, book: @book %>
     </div>
    <div class="col-md-8 offset-md-1">
<h2>Users</h2>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>

      <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg" %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show",user_path(user.id) %></td>
      <% end %>
    </tr>
  </tbody>
</table>
</div>
</div>
</div>
