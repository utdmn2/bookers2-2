<h2>Editing Book</h2>
<%= render 'error', book: @book %>
<%= form_with model:@book, local: true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show",book_path(@book.id) %>
<%= link_to "Back",books_path %>

