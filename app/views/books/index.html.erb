<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
      <td><%#= attachment_image_tag profile_image, :image%></td>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
     <% end %>
    </tr>

  </tbody>
</table>