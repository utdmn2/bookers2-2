<%= render 'error', book: @book %>
<%= render 'users/sidebar', user: @user, book: @book %>
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
      <% @books.each do |book| %>
    <tr>

      <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
     <% end %>
    </tr>

  </tbody>
</table>